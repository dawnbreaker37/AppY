                    <div class="box-container p-1 ps-0 pe-0" id="SendMessage_SecondInside_Box">
                        @if (!DiscussionInfo.IsPrivate)
                        {
                            <div>
                                <form method="post" asp-controller="Discussion" asp-action="Join" id="JoinToDiscussion_Form">
                                    <input type="hidden" name="Id" value="@DiscussionInfo.Id" />
                                    <button type="submit" class="btn btn-standard-asset bg-white btn-lg"> <i class="fa-solid fa-right-to-bracket"></i> Join</button>
                                </form>
                            </div>
                        }
                        else
                        {
                            <div>
                                <form method="post" asp-controller="Discussion" asp-action="JoinToPrivate" id="JoinToPrivateDiscussion_Form">
                                    <div class="hstack gap-2">
                                        <input type="hidden" name="Id" value="@DiscussionInfo.Id" />
                                        <input type="password" class="message-form-control me-auto form-control-check-input" data-bs-min-length="1" data-bs-html="JoinToPrivateDiscussion_SbmtBtn" name="Password" placeholder="Enter password here" />
                                        <button type="submit" class="btn btn-standard-asset bg-white btn-lg" id="JoinToPrivateDiscussion_SbmtBtn" disabled> <i class="fa-solid fa-right-to-bracket"></i> Join</button>
                                    </div>
                                </form>
                            </div>
                        }
                    </div>
                    <div class="box-container" style="display: none;" id="SendMessage_FirstInside_Box">
                        <div class="collapse" id="TextEditor_Collapse">
                            <div class="box-container p-2 w-100">
                                <div class="box-container bg-light d-inline-block w-100">
                                    <button type="button" class="btn btn-sm btn-standard text-editor me-1 mt-1" id="0-TextEditorStyle" data-bs-paste-to="SendDiscussionMessage_Text_Val"> <i class="fa-solid fa-bold"></i> </button>
                                    <button type="button" class="btn btn-sm btn-standard text-editor me-1 mt-1" id="1-TextEditorStyle" data-bs-paste-to="SendDiscussionMessage_Text_Val"> <i class="fa-solid fa-italic" id="1-TextEditorStyle"></i> </button>
                                    <button type="button" class="btn btn-sm btn-standard text-editor me-1 mt-1" id="2-TextEditorStyle" data-bs-paste-to="SendDiscussionMessage_Text_Val"> <i class="fa-solid fa-underline" id="2-TextEditorStyle"></i> </button>
                                    <button type="button" class="btn btn-sm btn-standard text-editor me-1 mt-1" id="3-TextEditorStyle" data-bs-paste-to="SendDiscussionMessage_Text_Val"> <i class="fa-solid fa-font" id="3-TextEditorStyle"></i> </button>
                                    <button type="button" class="btn btn-sm btn-standard me-1 mt-1 set-style" id="4-SetStyle"> <i class="fa-solid fa-palette"></i> </button>
                                    <button type="button" class="btn btn-sm btn-standard me-1 mt-1 set-style" id="5-SetStyle"> <i class="fa-solid fa-link"></i> </button>
                                    <button type="button" class="btn btn-sm btn-standard me-1 mt-1 set-style" id="6-SetStyle"> <i class="fa-regular fa-message"></i> </button>
                                    <button type="button" class="btn btn-sm btn-standard me-1 mt-1 set-style" id="7-SetStyle"> <i class="fa-regular fa-note-sticky"></i> </button>
                                    <button type="button" class="btn btn-sm btn-standard me-1 mt-1"> <i class="fa-regular fa-copy"></i> </button>
                                </div>
                                <div class="mt-2">
                                    <button type="button" class="btn btn-standard btn-sm auto-delete-on" id="SendMessage_IsAutoDeletable-TurnOnOrOff"> <i class="fa-solid fa-clock-rotate-left"></i> Auto-Deletable Message</button>
                                    <div class="ms-1">
                                        <small class="card-text text-muted">Message deletes immediately after being marked as read</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div>
                            <form method="post" asp-controller="DiscussionMessage" asp-action="SendMessage" id="SendDiscussionMessage_Form">
                                <div class="d-none">
                                    <input type="hidden" name="DiscussionId" value="@DiscussionInfo.Id" />
                                    <input type="hidden" name="UserId" value="@UserInfo.Id" />
                                    <input type="hidden" id="SendMessage_IsAutoDeletable" name="IsAutoDeletable" value="false" />
                                </div>
                                <textarea name="Text" id="SendDiscussionMessage_Text_Val" class="message-form-control mt-2 overflow-hidden form-control-check-input" rows="1" placeholder="Your message..." maxlength="3400" data-bs-min-length="1" data-bs-html="SendDiscussionMessage_SbmtBtn" disabled readonly></textarea>
                                <div class="ms-1 float-end mt-2 me-2">
                                    <button type="button" class="btn btn-message-example btn-sm mt-2" data-bs-toggle="collapse" data-bs-target="#TextEditor_Collapse" aria-expanded="false" aria-controls="TextEditor_Collapse"> <i class="fa-solid fa-plus"></i> </button>
                                    <button type="button" class="btn btn-message-example btn-sm mt-2 open-animated-collapse shadow-none btn-open-container" id="ScheduleTheMessage_Btn"> <i class="fa-regular fa-clock"></i> </button>
                                    <button type="submit" class="btn btn-message-example btn-sm bg-primary text-light mt-2" id="SendDiscussionMessage_SbmtBtn" disabled>Send</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

